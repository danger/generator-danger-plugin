{
  "name": "generator-danger-plugin",
  "version": "0.0.0-development",
  "description": "Generate a Danger plugin",
  "main": "generators/app/index.js",
  "files": [
    "generators",
    ".babelrc",
    ".eslintignore",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "test": "jest",
    "build": "babel src -d generators --ignore test.js,__snapshots__ --copy-files",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "yeoman",
    "yeoman-generator",
    "generator",
    "boilerplate",
    "danger",
    "danger-plugin"
  ],
  "author": "Macklin Underdown <macklinu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/macklinu/generator-danger-plugin.git"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-2": "^6.24.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "lint-staged": "^3.4.1",
    "prettier": "^1.3.1",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.12.1",
    "yeoman-assert": "^3.0.0",
    "yeoman-test": "^1.6.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "generator-node": "^2.1.0",
    "gulp-rename": "^1.2.2",
    "inquirer-npm-name": "^2.0.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "yeoman-generator": "^1.1.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/app/src/templates"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma=es5 --no-semi --write",
      "git add"
    ]
  }
}
